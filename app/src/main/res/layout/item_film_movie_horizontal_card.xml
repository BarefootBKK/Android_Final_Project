<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/item_ry_sl_cardView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="0px"
        android:elevation="1px"
        app:layout_constraintDimensionRatio="h,3:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/item_ry_sl_line_horizontal"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#eddfdf" />

            <ImageView
                android:id="@+id/item_ry_sl_img_poster"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="72:100"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_home_fill" />

            <TextView
                android:id="@+id/item_ry_sl_text_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                android:text="名称"
                android:textColor="#2c2a2a"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/item_ry_sl_line_vertical"
                app:layout_constraintStart_toEndOf="@+id/item_ry_sl_img_poster"
                app:layout_constraintTop_toTopOf="@+id/item_ry_sl_img_poster" />

            <View
                android:id="@+id/item_ry_sl_line_vertical"
                android:layout_width="1px"
                android:layout_height="0dp"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="16dp"
                android:background="#e4c0c0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/item_ry_sl_img_collect"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/item_ry_sl_text_score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="分数"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="@+id/item_ry_sl_text_name"
                app:layout_constraintStart_toStartOf="@+id/item_ry_sl_text_name"
                app:layout_constraintTop_toBottomOf="@+id/item_ry_sl_text_name" />

            <TextView
                android:id="@+id/item_ry_sl_text_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="简略信息"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/item_ry_sl_text_score"
                app:layout_constraintStart_toStartOf="@+id/item_ry_sl_text_score"
                app:layout_constraintTop_toBottomOf="@+id/item_ry_sl_text_score" />

            <ImageView
                android:id="@+id/item_ry_sl_img_collect"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                app:layout_constraintBottom_toTopOf="@+id/item_ry_sl_text_collect"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                app:srcCompat="@drawable/ic_collect" />

            <TextView
                android:id="@+id/item_ry_sl_text_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:text="收藏"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/item_ry_sl_line_vertical"
                app:layout_constraintTop_toBottomOf="@+id/item_ry_sl_img_collect" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
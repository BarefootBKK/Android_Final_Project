<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Toolbar-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/fg_dt_toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar"
        android:background="#d85050"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/Theme.AppCompat.Light">
    </android.support.v7.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_title1"
            android:background="@drawable/dt_text"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:textColor="#000"
            android:textSize="18sp"
            android:gravity="left"
            android:text="标题"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cardview"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="问题描述"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/item_number"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/dt_text2"
            android:gravity="left"
            android:padding="8dp"
            android:text="个回答"
            android:textSize="12dp"

            />


        <android.support.v7.widget.CardView
            android:layout_marginTop="10dp"
            android:id="@+id/opencard1"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cardview"
            >
            <LinearLayout
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="#fff"
                    android:layout_weight="3"
                    android:layout_width="300dp"
                    android:gravity="center|left"
                    android:orientation="vertical"
                    android:layout_height="130dp">
                    <TextView
                        android:id="@+id/item_title2"
                        android:background="#fff"
                        android:layout_width="wrap_content"
                        android:padding="10dp"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:gravity="left"
                        android:text="标题"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <ImageView
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:id="@+id/item_image1"
                    android:layout_width="120dp"
                    android:layout_height="120dp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginTop="10dp"
            android:id="@+id/opencard"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cardview"
            >
            <LinearLayout
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="#fff"
                    android:layout_weight="3"
                    android:layout_width="300dp"
                    android:gravity="center|left"
                    android:orientation="vertical"
                    android:layout_height="130dp">
                    <TextView
                        android:id="@+id/item_title3"
                        android:background="#fff"
                        android:layout_width="wrap_content"
                        android:padding="10dp"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:gravity="left"
                        android:text="标题"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <ImageView
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:id="@+id/item_image2"
                    android:layout_width="120dp"
                    android:layout_height="120dp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginTop="10dp"
            android:id="@+id/opencard2"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cardview"
            >
            <LinearLayout
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="#fff"
                    android:layout_weight="3"
                    android:layout_width="300dp"
                    android:gravity="center|left"
                    android:orientation="vertical"
                    android:layout_height="130dp">
                    <TextView
                        android:id="@+id/item_title"
                        android:background="#fff"
                        android:layout_width="wrap_content"
                        android:padding="10dp"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:gravity="left"
                        android:text="标题"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <ImageView
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:id="@+id/item_image"
                    android:layout_width="120dp"
                    android:layout_height="120dp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/answerbottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dt_text"
            android:text="我要回答"
            android:textSize="15dp"
            android:layout_gravity="center_horizontal"
            />
    </ScrollView>


</LinearLayout>